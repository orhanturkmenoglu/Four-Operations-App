<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_learn"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/RlrRate"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_star"/>

    </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:weightSum="2"
      android:padding="25dp"
      android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/lnrToplama"
          android:clickable="true"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/hexagon1"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/lnrCikarma"
          android:clickable="true"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/hexagon2"/>
      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrDortislem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/dortislem"
           />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:padding="25dp"

        android:orientation="horizontal">
        <LinearLayout android:id="@+id/lnrCarpma"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hexagon3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnrBolme"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hexagon4"/>
        </LinearLayout>
    </LinearLayout>




















































</LinearLayout>